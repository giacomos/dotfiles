background no
out_to_x no
out_to_console yes
update_interval 2.0
total_run_times 0
uppercase no
short_units yes
use_spacer none
if_up_strictness address
#colors
#default="#222222"
#green="#4E9A06"
#lightgreen="#6DDD00"
#grey="#7D7D7D"
